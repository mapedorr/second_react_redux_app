.to_top {
  float: right;
  background-color: transparent;
  box-shadow: none;
  padding: 0;
  line-height: 1.5rem;
  color: _white;
  border: none;

  &:before, &:after {
    content: '\25b2\a0';
    color: _cyan;
  }

  &:before {
    content: '\25b2\a0';
  }

  &:after {
    content: '\a0\25b2';
  }

  &:focus {
    outline: none;
  }
}

.page_content {
  display: grid;
  align-items: center;
  flex-grow: 1;
  margin: 4.5rem 2rem 1rem;
  padding: 2rem 0 0;
  border: 2px solid _white;
  overflow-y: auto !important;
}

.home_page {
  h1 {
    selection_transparent(_yellow);
  }
}

.posts_page {
  flex_center();
  flex-direction: column;

  h1 {
    color: _light_blue;
  }

  .post_wrapper {
    padding: 1rem;
    text-align: left;
    background-color: _light_blue;
    color: _grey;
    margin: 0 1rem 2rem;

    .post_title {
      margin: 0 0 2rem 0;
      border-bottom: 1px solid _red;
      color: _yellow !important;
      font-weight: 200;
      text-transform: uppercase;
      font-size: 1.6rem;
      selection_color(_pink);
    }

    .post_body {
      color: _pink;
      margin-bottom: 1rem;
      font-size: 1.4rem;
      selection_color(_yellow);
    }

    .loading {
      background-color: _blue;
      border: 4px double _white;
      color: _white;
      font-size: 1.2rem;
      padding-left: 2rem;
    }

    .comment_wrapper {
      display: flex;
      margin: 0 auto;
      padding: 8px;
      background-color: _blue;
      border: 4px double _white;

      p {
        font-size: 1.2rem;

        &.comment_email {
          color: _white;
          text-decoration: underline;
          selection_color(_black);
        }

        &.comment_body {
          margin: 0 0.5rem 0 2rem;
          selection_color(_dark_grey);
        }
      }
    }
  }
}

.albums_page {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;

  h1 {
    color: _green;
  }

  .album {
    flex-basis: calc(33.333% - 4rem);
    flex-grow: 1;
    flex-shrink: 0;
    flex_center();
    margin: 0 2rem 2rem 2rem;
    position: relative;
    text-align: center;
    height: 10rem;

    .album_title {
      flex_center();
      height: 100%;
      width: 100%;
      text-decoration: none;
      background: _green;
      box-shadow: big-shadows;

      &:hover {
        background: _light_green;
      }

      &:active {
        color: _yellow;
      }

      span {
        padding: 0 1rem;
        font-size: 1.8rem;
      }
    }
  }
}

.todos_page {
  display: grid;
  gap: 2rem;
  justify-content: center;
  color: _yellow;

  h1 {
    selection_color(_pink);
  }

  .user {
    .user_data {
      color: _yellow;
      font-size: 1.5rem;
      margin: 0;

      &::before, &::after {
        color: _red;
      }

      &::before {
        content: '\2500[\A0';
      }

      &::after {
        content: '\A0]\2500\2500\2500\2500';
      }

      .user_email {
        &::before {
          content: '\25E4';
        }

        &::after {
          content: '\25E2';
        }
      }
    }

    ul {
      list-style: none;

      .todo {
        font-size: 1.5rem;

        .todo_title {
          color: _cyan;

          &::before {
            content: '\25C7\A0';
          }

          &.completed::before {
            content: '\25C8\A0';
          }
        }
      }
    }
  }
}

