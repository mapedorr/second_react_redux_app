@font-face {
  font-family: 'Px437_IBM_VGA8';
  src: url('../assets/fonts/px437_ibm_vga8-webfont.eot');
  src: url('../assets/fonts/px437_ibm_vga8-webfont.eot?#iefix') format('embedded-opentype'), url('../assets/fonts/px437_ibm_vga8-webfont.woff') format('woff'), url('../assets/fonts/px437_ibm_vga8-webfont.ttf') format('truetype');
  font-weight: normal;
  font-style: normal;
}

html {
  font-size: 14px;
  font-family: 'Px437_IBM_VGA8', monospace;
}

p {
  font-size: 1.7rem;
  line-height: 1.5;
}

h1 {
  text-align: center;
  font-weight: 100;
  font-size: 6rem;
  margin: 2rem 0;

  a {
    color: _grey;
    text-decoration: none;

    &:focus {
      outline: 0;
    }
  }
}
