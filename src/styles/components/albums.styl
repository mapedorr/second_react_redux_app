.albums_page {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;

  h1 {
    color: _green;
  }

  .album {
    flex-basis: calc(33.333% - 4rem);
    flex-grow: 1;
    flex-shrink: 0;
    flex_center();
    margin: 0 2rem 2rem 2rem;
    position: relative;
    text-align: center;
    height: 10rem;

    .album_title {
      flex_center();
      height: 100%;
      width: 100%;
      text-decoration: none;
      background: _green;
      box-shadow: big-shadows;

      &:hover {
        background: _light_green;
      }

      &:active {
        color: _yellow;
      }

      span {
        padding: 0 1rem;
        font-size: 1.8rem;
      }
    }
  }
}