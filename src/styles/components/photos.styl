.photos_page {
  background: _pink;
  display: grid;
  gap: 20px;
  grid-template-columns: repeat(auto-fill, 100px);
  grid-auto-rows: 100px;
  grid-auto-flow: dense;

  .photo {
    position: relative;
    grid-column: span var(--column-span);
    grid-row: span var(--row-span);
    /* Para hacer el overlay sin usar position absolute en el hijo */
    overflow: hidden; /* Para que no se vea lo que queda por fuera del elemento */
    display: grid;
    grid-template-columns: 1;
    grid-template-rows: 1;
  }

  .photo:hover {
    cursor: pointer;
  }

  .photo img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    /* Para hacer el overlay sin usar position absolute en el hijo */
    grid-column: 1 / -1;
    grid-row: 1 / -1;
  }
}